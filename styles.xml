<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <declare-styleable name="SearchBar">
        <attr name="search_bar_text_color" format="color|reference"/>
        <attr name="search_bar_text_hint" format="string|reference"/>
        <attr name="search_bar_text_hint_color" format="color|reference"/>
        <attr name="search_bar_text_cancel" format="string|reference"/>
        <attr name="search_bar_text_cancel_color" format="color|reference"/>
        <attr name="search_bar_search_background" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="HorizontalOverScrollView2">
        <attr name="ripple_color" format="color|reference"/>
        <attr name="drag_text_color" format="color|reference"/>
        <attr name="dragging_text" format="string|reference"/>
        <attr name="dragged_text" format="string|reference"/>
    </declare-styleable>

</resources>
